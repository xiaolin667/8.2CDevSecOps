pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from the main branch
                git branch: 'main', url: 'https://github.com/xiaolin667/8.2CDevSecOps.git'
            }
        }
        stage('Install Dependencies') {
            environment {
                // Set the Node.js and NPM paths
                NODE_HOME = '/opt/homebrew/bin'
            }
            steps {
                // Use Node.js and NPM from the specified paths
                sh '${NODE_HOME}/npm install'
            }
        }
        stage('Run Tests') {
            steps {
                // Run tests and allow pipeline to continue on failure
                sh '${NODE_HOME}/npm test || true'
            }
        }
        stage('Generate Coverage Report') {
            steps {
                // Generate coverage report and allow pipeline to continue on failure
                sh '${NODE_HOME}/npm run coverage || true'
            }
        }
        stage('NPM Audit (Security Scan)') {
            steps {
                // Run security audit and allow pipeline to continue on failure
                sh '${NODE_HOME}/npm audit || true'
            }
        }
    }

    // Optional: Post actions (such as notifications) can go here
    post {
        always {
            // Clean up or notifications can be added here
            echo 'Pipeline finished. Cleaning up...'
        }
    }
}
